---
import Content from "../components/Content.astro";
import BaseLayout from "./BaseLayout.astro";
import LinkBlock from "../components/mdx/LinkBlock.astro";

const { content } = Astro.props;
---

<BaseLayout>
  <Content>
    <h2
      class="cursor-pointer tracking-tighter font-white dark:font-mine-shaft-900 text-size-1 font-bold"
      set:html={content.title} />

    <h3 class="mt-size-3xs text-size-0 text-alice-400"
      set:html={content.status} />

    <div class="text-md mt-size-md flex flex-row flex-wrap gap-size-xs">
      {content.author.map((author) => (
      <div>
        <p class="text-size-0">
          <a href={author.url} class="underline decoration-alice-500">
            {author.name}
          </a>
        </p>
      </div>
      ))}
    </div>

    {content.links === undefined ? <></> :
    <div class="text-md mt-size-md flex flex-row flex-wrap gap-size-xs">
      {content.links?.map((link) => (
        <LinkBlock url={link.url} name={link.name}></LinkBlock>
      ))}
    </div>
    }
  </Content>
  <div class="mt-size-2xl"></div>
  <Content flow prose>
    <slot />
  </Content>
</BaseLayout>
