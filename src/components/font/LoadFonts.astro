---
import { AstroFont } from "astro-font"
import { join } from "node:path"
---

<AstroFont
	config={[
		{
			name: "Libertine",
			src: [
				{
					style: "normal",
					weight: "400",
					path: join(
						process.cwd(),
						"public",
						"fonts",
						"LinuxLibertine_Regular.woff"
					),
				},
				{
					style: "italic",
					weight: "400",
					path: join(
						process.cwd(),
						"public",
						"fonts",
						"LinuxLibertine_Italic.woff"
					),
				},
				{
					style: "normal",
					weight: "700",
					path: join(
						process.cwd(),
						"public",
						"fonts",
						"LinuxLibertine_Bold.woff"
					),
				},
				{
					style: "italic",
					weight: "700",
					path: join(
						process.cwd(),
						"public",
						"fonts",
						"LinuxLibertine_BoldItalic.woff"
					),
				},
			],
			preload: true,
			display: "block",
			selector: "body",
			fallback: "serif",
		},
