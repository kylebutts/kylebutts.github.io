---
interface Props {
  authors: { name: string; url: string }[];
}
const { authors } = Astro.props;
---

<>
  {
    authors.map((author, i) => {
      let sep = "";
      if (authors.length > 1 && i > 0 && i < authors.length - 1) {
        sep = ", ";
      }
      if (authors.length > 2 && i == authors.length - 2) {
        sep = ", and ";
      }
      if (authors.length == 2 && i == authors.length - 2) {
        sep = " and ";
      }

      return (
        <Fragment>
          <a href={author.url}>{author.name}</a>
          {sep}
        </Fragment>
      );
    })
  }
</>
