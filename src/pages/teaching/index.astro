---
import Layout from "../../layouts/Layout.astro"
import { getCollection } from "astro:content"
const courses = await getCollection("courses")
---

<Layout>
  <ol class="flex flex-col gap-y-size-lg">
		{
			courses.map((course, i) => {
				return (
					<li class="grid grid-cols-[2em_1fr]">
						<p class="text-size-0">{i + 1}. </p>
						<div>
              <h2 class="font-zinc-800 hover:font-zinc-50 cursor-pointer font-bold text-size-0">
                {/* TODO: Find external link svg */}
                <svg class="inline-block text-kelly-500 dark:text-kelly-400 h-4 w-4 -mt-[0.25em] lg:h-5 lg:w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 256 256"><g fill="currentColor"><path d="m209.94 113.94l-28 28a47.76 47.76 0 0 1-26.52 13.48a47.76 47.76 0 0 1-13.48 26.52l-28 28a48 48 0 0 1-67.88-67.88l28-28a47.76 47.76 0 0 1 26.52-13.48a47.76 47.76 0 0 1 13.48-26.52l28-28a48 48 0 0 1 67.88 67.88Z" opacity=".2"/><path d="M137.54 186.36a8 8 0 0 1 0 11.31l-17.94 18a56 56 0 0 1-79.22-79.27l28.12-28.11a56 56 0 0 1 76.81-2.29a8 8 0 1 1-10.64 12a40 40 0 0 0-54.85 1.63L51.7 147.72a40 40 0 1 0 56.58 56.58l17.94-17.94a8 8 0 0 1 11.32 0Zm78.08-146a56.08 56.08 0 0 0-79.22 0l-17.94 17.97a8 8 0 0 0 11.32 11.31l17.94-17.94a40 40 0 0 1 56.58 56.58l-28.12 28.12a40 40 0 0 1-54.85 1.6a8 8 0 1 0-10.64 12a56 56 0 0 0 76.81-2.27l28.12-28.11a56.08 56.08 0 0 0 0-79.24Z"/></g></svg>
                <a class="underline decoration-zinc-300" set:html={course.data.title} />
              </h2>

							<p
								class="mt-size-3xs text-size--1"
								set:html={course.data.description}
							/>
						</div>
					</li>
				)
			})
		}
	</ol>
  
