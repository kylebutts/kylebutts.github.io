---
import Content from "../components/Content.astro"
import Katex from "../components/Katex.astro"
import PaperTitle from "../components/PaperTitle.astro"
import BaseLayout from "./BaseLayout.astro"

const { frontmatter } = Astro.props
let slug = Astro.url.pathname.replace("/papers/", "").replace(/\/$/, "")
---

<BaseLayout slug={slug} katex>
	<Content>
		<PaperTitle frontmatter={frontmatter} />
	</Content>
	<div class="mt-size-2xl"></div>
	<Content prose flow><slot /></Content>
</BaseLayout>
